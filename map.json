{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1100,
    "height": 600,
    "background":"whitesmoke",
    "description": "Global Missing Migrant",
    "params": [
        {
            "name": "Cause_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Drowning",
                    "Harsh environmental conditions / lack of adequate shelter, food, water",
                    "Mixed or unknown",
                    "Sickness / lack of access to adequate healthcare",
                    "Violence",
                    "Accidental death",
                    "Vehicle accident / death linked to hazardous transport"
                ],
                "labels": [
                    "Show All",
                    "Drowning",
                    "Harsh environmental conditions / lack of adequate shelter, food, water",
                    "Mixed or unknown",
                    "Sickness / lack of access to adequate healthcare",
                    "Violence",
                    "Accidental death",
                    "Vehicle accident / death linked to hazardous transport"
                ],
                "name": "Cause of Death"
            }
        },
        {
            "name": "zoom_level",
            "value": 30000,
            "bind": {
                "input": "range",
                "min": 3500,
                "max": 6000000,
                "step": 100,
                "name": "Zoom: "
            }
        }
    ],
    "projection": {
        "type": "equalEarth"
       
        },
    
    "layer": [
        {
            "data": {
                "url": "ne_110m_admin_0_countries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#808080",
                "stroke": "darkgrey"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "oceans"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "whitesmoke"
            }
        },
        {
            "data": {
                "url": "Global Missing Migrants Dataset.csv"
            },
            "transform": [
                {
                    "filter": "Cause_selection == null || datum['Cause of Death'] == Cause_selection"
                }
            ],
            "mark": {
                "type": "circle",
                "filled": true
            },
            "encoding": {
                "longitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Longitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "Total Number of Dead and Missing",
                    "type": "quantitative",
                    "title": "Number of Dead and Missing",
                    "scale": {
                        "domain": [
                            1,
                            1100
                        ],
                        "range": [
                            1,
                            1100
                        ]
                    }
                },
                "color": {
                    "value": "#990000"
                    
                },
            
               
                "tooltip": [
                    {
                        "field": "Total Number of Dead and Missing",
                        "type": "quantitative",
                        "title": "Number of Dead and Missing"
                    },
                    {
                        "field": "Region of Incident",
                        "type": "nominal",
                        "title": "Region of Incident"
                    },
                    {
                        "field": "Incident year",
                        "type": "quantitative",
                        "title": "Incident year"
                    }
                ]
            }
        }
    ]
}